#!/bin/bash

# TODO: Add usage
# TODO: Make timeout a command line option (not argument)

BASE="hammer"

USER=$1

if [ ! -n "$2" ]
then
	TIMEOUT=""
else
	TIMEOUT=$2
fi


echo "Top user per ${BASE} node by %CPU ...."

printf "%15s %15s %5s %5s %12s %12s %15s\n" "User" "Node" "%CPU" "Mem" "SZ" "VSZ" "Time"
printf "%15s %15s %5s %5s %12s %12s %15s\n" "---------------" "---------------" "-----" "-----" "------------" "------------" "---------------"

hammertop ${USER} ${TIMEOUT} | grep -e "[ ]*${BASE}[0-9]\+[ ]\+[3]" | awk '{printf "%15s %15s %5s %5s %12s %12s %15s\n", $11, $1, $3, $4, $5, $6, $7}' | sort

echo ""
echo "Top user per ${BASE} node by %Memory ...."

printf "%15s %15s %5s %5s %12s %12s %15s\n" "User" "Node" "Mem" "%CPU" "SZ" "VSZ" "Time"
printf "%15s %15s %5s %5s %12s %12s %15s\n" "---------------" "---------------" "-----" "-----" "------------" "------------" "---------------"

hammertop ${USER} ${TIMEOUT} | grep -e "[ ]*${BASE}[0-9]\+[ ]\+[9]" | awk '{printf "%15s %15s %5s %5s %12s %12s %15s\n", $11, $1, $4, $3, $5, $6, $7}' | sort
